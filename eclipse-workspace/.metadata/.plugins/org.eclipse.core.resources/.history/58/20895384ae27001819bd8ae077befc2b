package Ejercicio01;

import java.applet.Applet;
import java.awt.Graphics;
import java.awt.Image;

public class Caminar extends Applet implements Runnable {

	Thread animacion;
	Image fotogramas[];
	DibujoAnimado dibujoanimado;
	int cont = 0;
	int indice = 0;

	public void init() {
		setSize(800, 800);
		fotogramas = new Image[4];
		for (int i = 0; i < fotogramas.length; i++) {
			fotogramas[i] = getImage(getCodeBase(), "Sprites/Guerrillero/g" + (i + 1) + ".gif"); // léeme la direccion
																									// de memoria donde
																									// esté el codigo
																									// base
		}
		dibujoanimado = new DibujoAnimado(fotogramas, this);
	}

	public void start() {
		animacion = new Thread(this);
		animacion.start();
	}

	public void paint(Graphics g) {
		dibujoanimado.dibujar(g);

	}

	public void run() {
		while (true) {
			dibujoanimado.actualizar();
			repaint();
			try {
				Thread.sleep(120);

			} catch (InterruptedException e) {

			}
		}
	}
}
