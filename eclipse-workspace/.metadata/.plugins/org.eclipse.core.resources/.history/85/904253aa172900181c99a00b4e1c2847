package Ejercicio01;

import java.applet.Applet;
import java.awt.Event;
import java.awt.Graphics;
import java.awt.Image;

public class Caminar extends Applet implements Runnable {

	Thread animacion;
	Image fotogramas[][];
	DibujoAnimado dibujoanimado[];
	String[] fuente = { "Sprites/Guerrillero/g", "Sprites/Hampon/h", "Sprites/Vaquero/v" };
	int cont = 0;
	int indice = 0;

	public void init() {
		setSize(1800, 800);
		fotogramas = new Image[3][4];
		dibujoanimado = new DibujoAnimado[3];
		for (int i = 0; i < fotogramas.length; i++) {
			for (int j = 0; j < fotogramas[i].length; j++) {
				fotogramas[i][j] = getImage(getCodeBase(), (fuente[i] + j) + ".gif"); // léeme
																						// la

			}
			// direccion
			// de memoria donde
			// esté el codigo
			// base
		}
		for (int i = 0; i < fotogramas.length; i++) {
			dibujoanimado[i] = new DibujoAnimado(fotogramas[i], this);
		}
	}

	public void start() {
		animacion = new Thread(this);
		animacion.start();
	}

	public void paint(Graphics g) {
		for (int i = 0; i < dibujoanimado.length; i++) {
			dibujoanimado[i].dibujar(g);
		}

	}

	public void run() {
		while (true) {
			for (int i = 0; i < dibujoanimado.length; i++) {

				dibujoanimado[i].actualizar();
			}
			repaint();
			try {
				Thread.sleep(200);

			} catch (InterruptedException e) {

			}
		}
	}

	public boolean keyDown(Event e, int tecla) {

		if (tecla == 1004) {
			for (int i = 0; i < dibujoanimado.length; i++) {
				dibujoanimado[i].salto = true;
			}
		}
		return true;
	}
}
